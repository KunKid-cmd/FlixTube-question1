<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">

        <title>FlixTube: Advertisements</title>

        <link rel="stylesheet" href="css/tailwind.min.css">
        <link rel="stylesheet" href="css/app.css">
    </head>
    <body>
        <div class="flex flex-col">
            <div class="border-b-2 bg-gray-100">
                <div class="nav flex flex-row items-center mt-1 p-2">
                    <div class="text-xl font-bold">
                        FlixTube
                    </div>
                    <div class="ml-16 border-b-2 border-blue-600">
                        <a href="/">Videos</a>
                    </div>
                    <div class="ml-4">
                        <a href="/upload">Upload</a>
                    </div>
                    <div class="ml-4">
                        <a href="/history">History</a>
                    </div>
                    <div class="ml-4">
                        <a href="/advertise">Advertise</a> 
                    </div>
                </div>
            </div>

            <div class="m-4">
                    <h1>Advertisements</h1>
                    <ul>
                        {{#each ads}}
                            <li>
                                <a href="{{this.url}}" target="_blank">
                                    <img src="{{this.image}}" alt="{{this.name}}" width="200">
                                </a>
                            </li>
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </body>
</html>